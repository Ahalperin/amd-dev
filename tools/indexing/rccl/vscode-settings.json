{
  // C/C++ IntelliSense settings for RCCL
  // This disables Microsoft C++ extension in favor of clangd
  // Deploy this to .vscode/settings.json in the RCCL root directory
  
  "C_Cpp.intelliSenseEngine": "disabled",
  
  // Clangd settings
  "clangd.path": "clangd",
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--pch-storage=memory",
    "--log=error",
    "--all-scopes-completion",
    "--cross-file-rename",
    "--enable-config"
  ],
  "clangd.fallbackFlags": [
    "-std=c++17"
  ],
  
  // File associations for HIP/CUDA files
  "files.associations": {
    "*.cu": "cuda-cpp",
    "*.cuh": "cuda-cpp",
    "*.hip": "cpp",
    "*.h": "c",
    "*.hpp": "cpp"
  },
  
  // Search settings
  "search.exclude": {
    "**/build": true,
    "**/hipify": true,
    "**/.cache": true,
    "**/compile_commands.json": true
  },
  
  // Editor settings
  "editor.formatOnSave": false,
  "editor.semanticHighlighting.enabled": true
}














